{
	"name": "zen-ws",
	"version": "1.0.2",
	"description": "WebSocket library",
	"type": "module",
	"main": "./dist/cjs/index.js",
	"module": "./dist/esm/index.js",
	"types": "./dist/types/index.d.ts",
	"exports": {
		".": {
			"types": "./dist/types/index.d.ts",
			"import": {
				"types": "./dist/types/index.d.ts",
				"default": "./dist/esm/index.js"
			},
			"require": {
				"types": "./dist/types/index.d.ts",
				"default": "./dist/cjs/index.js"
			}
		}
	},
	"files": [
		"dist",
		"README.md"
	],
	"scripts": {
		"clean": "rm -rf dist",
		"build": "npm run clean && npm run bundle && npm run build:types",
		"bundle": "node esbuild.config.js",
		"build:types": "tsc --emitDeclarationOnly"
	},
	"keywords": [
		"websocket",
		"ws"
	],
	"author": "",
	"license": "ISC",
	"dependencies": {
		"esbuild": "^0.24.2",
		"ws": "^8.18.0",
		"zen-json-type": "^1.0.0"
	},
	"devDependencies": {
		"@types/ws": "^8.5.13",
		"typescript": "^5.7.2",
		"typescript-eslint": "^8.16.0"
	}
}
